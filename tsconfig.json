// tsconfig.json (в корне вашего проекта)
{
    "compilerOptions": {
        "target": "es2024", // Или более поздняя версия, например, es2020
        "lib": [
            "ES2024",
            "dom"
        ], // Или более поздняя версия для `es`, плюс `dom` для работы с браузером
        "module": "commonjs", // Или "esnext"
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true, // Если вы используете Cypress Component Testing
        "baseUrl": ".",
        "types": [
            "cypress",
            "node"
        ] // <-- САМОЕ ВАЖНОЕ: добавьте "cypress" сюда
    },
    "include": [
        "**/*.ts", // Включает все .ts файлы
        "cypress/**/*.js" // Если у вас есть JavaScript-файлы тестов, которые вы хотите, чтобы TypeScript их проверял (например, в support-файлах)
    ],
    "exclude": [
        "node_modules"
    ]
}